---
import { capitalize } from "vue";
import Container from "./Container.astro";
import FormattedDate from "./FormattedDate.astro"
import type { Event } from "../../types/event.interface";
import Button from "./Button.astro";

interface Props {
	events: Event[]
}

const { events } = Astro.props;
---

<section
  id="speakers"
  aria-labelledby="speakers-title"
  class="py-20 sm:py-32"
>
  <!-- <ImageClipPaths id={id} /> -->
  <Container>
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2
        id="speakers-title"
        class="font-display text-4xl font-semibold"
      >
        Prochaines dates
      </h2>
      <p class="mt-4 font-mono space-y-6 text-lg max-w-2xl tracking-tight text-slate-950">
        Le principe est simple: 4 talks de 10 minutes pour partager autour du d√©veloppement logiciel au sens large.
      </p>
    </div>
    <div class="mt-14 flex space-x-12">
      <div class="border-r border-blue-200 pr-6 text-right shrink-0 min-w-56">
